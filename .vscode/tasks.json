    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "docker run -t --rm -v $(PWD):/home/rust-builder rust-builder cargo build"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "docker run -t --rm -v $(PWD):/home/rust-builder rust-builder cargo build --release"
        }
    ]
